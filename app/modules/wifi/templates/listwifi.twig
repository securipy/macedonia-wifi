{% extends "templates/base.twig" %} 

{% block body %}


   <!-- page content -->
        <div class="right_col" role="main">

          <div class="row">
          	<div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Select wifi</h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>

                      <li><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <table id="datatable" class="table table-striped table-bordered">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>pcap </th>
                          <th>Date </th>
                          <th>Status</th>
                          <th>Passwords </th>
                          <th>Actions</th>
                        </tr>
                      </thead>


                      <tbody>
                      {% if wifis.response == true %}
                      	{% for wifi in wifis.result%}
                        <tr>
                          <td>{{wifi.name}}</td>
                          <td>{{wifi.file}}</td>
                          <td>{{wifi.date_create}}</td>
                          <td>
                            {% if wifi.process == 0 %}
                            Without processing
                            {% elseif wifi.process == 1 %}
                              Waiting to be processed
                            {% endif %}
                           </td>
                          <td>{{wifi.password}}</td>
                          <td>
                            {% if wifi.process == 0 %}
                              <button type="button" class="btn btn-default crack_wifi" data-id="{{wifi.id}}">Crack</button>
                            {% endif %}
                              <button type="button" class="btn btn-danger delete_wifi" data-id="{{wifi.id}}">Delete</button>
                          </td>
            
                        </tr>
                        {% endfor %}
                        {% endif %}

                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
          </div>


        </div>
        <!-- /page content -->


{% endblock %}


{% block javascript %}
{{ parent() }}
 <script src="{{ base_url() }}/modules/wifi/js/wifi.js"></script>

{% endblock %}